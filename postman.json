{
  "info": {
    "name": "Blog API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Posts",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/posts?page=1&limit=10&sortBy=createdAt&sortOrder=desc&keyword=test&tag=technology",
          "host": ["{{baseUrl}}"],
          "path": ["api", "posts"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "sortBy",
              "value": "createdAt"
            },
            {
              "key": "sortOrder",
              "value": "desc"
            },
            {
              "key": "keyword",
              "value": "test"
            },
            {
              "key": "tag",
              "value": "technology"
            }
          ]
        }
      }
    },
    {
      "name": "Create Post",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/posts",
          "host": ["{{baseUrl}}"],
          "path": ["api", "posts"]
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": {
            "title": "Test Post",
            "description": "This is a test post",
            "image": "data:image/jpeg;base64,/9j/4AAQSkZJRg...",
            "tags": ["technology", "programming"]
          }
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ]
}